<h1>New task</h1>

<%= form_for(@task) do |t| %>
<div class="form-group">
<%= t.label :title %>
<%= t.text_field :title , class: 'form-control' %>
</div>

<div class="form-group">
<%= t.label :details %>
<%= t.text_area :details, class: 'form-control' %>
</div>

<%= unless f.object.new_record? %>
<div class="checkbox">
  <label>
<%= t.check_box :completed %> Completed
</label>
</div>
<% end %>

<%= t.submit class: 'btn btn-primary' %>
<%= end %>

 <%= link_to 'Back to list', tasks_path %>
